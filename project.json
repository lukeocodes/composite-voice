{
  "name": "@lukeocodes/composite-voice",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "tags": ["type:library", "scope:sdk"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "tsup src/index.ts --format cjs,esm --dts --clean"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup src/index.ts --format cjs,esm --dts --watch"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage"],
      "options": {
        "command": "jest"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --watch"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage"],
      "options": {
        "command": "jest --coverage"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --ext .ts"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --ext .ts --fix"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"docs/**/*.md\" \"*.md\" \"*.json\" \"*.js\""
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"docs/**/*.md\" \"*.md\" \"*.json\" \"*.js\""
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit"
      }
    }
  }
}

